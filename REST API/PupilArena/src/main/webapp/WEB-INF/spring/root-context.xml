<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="authService" class="com.pupilarena.service.impl.AuthServiceImpl">
		<property name="authDao" ref="authDao"></property>
	</bean>
	<bean id="adminService" class="com.pupilarena.service.impl.AdminServiceImpl">
		<property name="adminDao" ref="adminDao"></property>
	</bean>

	<bean name="authDao" class="com.pupilarena.dao.impl.AuthDao">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	<bean name="adminDao" class="com.pupilarena.dao.impl.AdminDao">
		<property name="dataSource" ref="dataSource"></property>
	</bean>
	
	<bean id="dataSource"
		class="org.springframework.jdbc.datasource.DriverManagerDataSource">
		<property name="driverClassName" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost:3306/pupilArena?autoReconnect=true&amp;useSSL=false" />
		<property name="username" value="root" />
		<property name="password" value="" />
	</bean>
		
</beans>
